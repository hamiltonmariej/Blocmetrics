<h1><%= @registered_application.name %></h1>
<p>URL: <%= link_to @registered_application.url, @registered_application.url %><br />
  <%= javascript_include_tag "https://www.google.com/jsapi", "chartkick" %>
<%= pie_chart @registered_application.events.group(:name).count %>
<%= line_chart @registered_application.events.group_by_day(:created_at).count %>
<br>
<br>


<div class="row">
  <div class="col-md-8">
    <p><%= @registered_application.url %></p>
  </div>
  <div class="col-md-8">
    <h3>Total Count of Events</h3>
    <p><%= @registered_application.events.group(:name).count %></p><br />
  </div>
  <div class="col-md-4">
    <%= link_to 'Edit App', edit_registered_application_path(@registered_application), class: 'btn btn-success' %>
    <%= link_to 'Delete App', @registered_application, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this registered application?'} %>
    <%= link_to 'Back to Applications', registered_applications_path %>
  </div>
</div>
